{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ESNext",
    "module": "CommonJS",
    "types": [
      "node",
    ],
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./source/*",
        "server/core/*",
        "server/app/*"
      ],
      "@/database": [
        "./database.ts"
      ],
      "@/public/*": [
        "./public/*"
      ],
      "@/types/*": [
        "./types/*"
      ],
      "@/__mocks__": [
        "./__mocks__/index.ts"
      ],
    },
    "isolatedModules": true,
    "incremental": true
  },
  "include": [
    "server/**/*",
    "server/app",
    "source",
    "pages",
    "types"
  ],
  "ts-node": {
    "transpileOnly": true,
  },
  "exclude": [
    "node_modules/**/*",
    "babel.config.ts",
    "metro.config.ts",
    "vitest.config.js",
    "next.config.ts",
    "source/components/atom/date-picker/react-date-picker/**/*",
    ".docker"
  ],
  "extends": "expo/tsconfig.base",
  "rules": [
    {
      "react/prop-types": 0
    }
  ]
}